{
  "hooks": {
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "CLAUDE_HOOK_EVENT=Notification $CLAUDE_PROJECT_DIR/.claude/hooks/slack_notify.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "CLAUDE_HOOK_EVENT=Stop $CLAUDE_PROJECT_DIR/.claude/hooks/slack_notify.sh"
          }
        ]
      }
    ]
  }
}
