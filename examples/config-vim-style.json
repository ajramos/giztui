{
  "_comment": "Vim-style keyboard shortcuts configuration example",
  "_description": "This configuration demonstrates how to customize shortcuts to match Vim keybindings",
  "credentials": "~/.config/giztui/credentials.json",
  "token": "~/.config/giztui/token.json",
  "llm": {
    "enabled": true,
    "provider": "ollama",
    "model": "llama3.2:latest",
    "endpoint": "http://localhost:11434/api/generate",
    "timeout": "20s",
    "stream_enabled": true,
    "stream_chunk_ms": 60,
    "cache_enabled": true,
    "cache_path": "",
    "summarize_template": "templates/ai/summarize.md",
    "reply_template": "templates/ai/reply.md",
    "label_template": "templates/ai/label.md",
    "touch_up_template": "templates/ai/touch_up.md"
  },
  "slack": {
    "enabled": false,
    "channels": [],
    "defaults": {
      "format_style": "summary"
    }
  },
  "layout": {
    "auto_resize": true,
    "wide_breakpoint": {
      "width": 120,
      "height": 30
    },
    "medium_breakpoint": {
      "width": 80,
      "height": 25
    },
    "narrow_breakpoint": {
      "width": 60,
      "height": 20
    },
    "default_layout": "auto",
    "show_borders": true,
    "show_titles": true,
    "compact_mode": false,
    "max_recipient_lines": 3,
    "_max_recipient_lines_info": "Controls truncation of To/Cc fields when recipient lists are very long. Prevents important fields (Labels, Date) from being cut off. Valid range: 1-10, default: 3"
  },
  "theme": {
    "current": "gmail-dark",
    "custom_dir": ""
  },
  "keys": {
    "_comment": "Vim-style shortcuts for GizTUI",
    "_vim_timeouts": "VIM sequence timeouts in milliseconds (faster for VIM users)",
    "vim_navigation_timeout_ms": 800,
    "vim_range_timeout_ms": 1500,
    "_core_operations": "Core email operations with Vim-style keys",
    "summarize": "ys",
    "generate_reply": "gr",
    "suggest_label": "gl",
    "reply": "r",
    "reply_all": "ra",
    "forward": "f",
    "compose": "i",
    "load_more": "G",
    "refresh": "R",
    "search": "/",
    "unread": "u",
    "archived": "B",
    "search_from": "F",
    "search_to": "T",
    "search_subject": "S",
    "toggle_read": "t",
    "undo": "U",
    "trash": "dd",
    "archive": "a",
    "move": "m",
    "prompt": "p",
    "drafts": "D",
    "attachments": "A",
    "manage_labels": "l",
    "quit": ":q",

    "_additional_shortcuts": "Additional Vim-style shortcuts",
    "obsidian": "Shift+O",
    "open_gmail": "O",
    "slack": "K",
    "markdown": "M",
    "save_message": "w",
    "save_raw": "W",
    "rsvp": "V",
    "link_picker": "L",
    "theme_picker": "H",
    "bulk_mode": "v",
    "bulk_select": "space",
    "command_mode": ":",
    "help": ":h",
    "toggle_headers": "zh",

    "_content_navigation": "Vim-style content navigation shortcuts",
    "content_search": "/",
    "search_next": "n",
    "search_prev": "N",
    "fast_up": "ctrl+k",
    "fast_down": "ctrl+j",
    "word_left": "b",
    "word_right": "w",
    "goto_top": "gg",
    "goto_bottom": "G",

    "_threading_navigation": "Vim-style threading shortcuts",
    "toggle_threading": "zt",
    "expand_all_threads": "zR",
    "collapse_all_threads": "zM",
    "thread_summary": "zs",
    "next_thread": "]]",
    "prev_thread": "[["
  },
  "threading": {
    "_comment": "Threading configuration for Vim-style workflow",
    "enabled": true,
    "default_view": "flat",
    "auto_expand_unread": false,
    "show_thread_count": true,
    "cache_summaries": true,
    "max_summary_length": 400,
    "summary_language": "en",
    "persist_thread_state": true
  },
  "obsidian": {
    "enabled": true,
    "vault_path": "~/Documents/Obsidian/MyVault",
    "ingest_folder": "00-Inbox",
    "filename_format": "{{date}}_{{subject_slug}}_{{from_domain}}",
    "history_enabled": true,
    "prevent_duplicates": true,
    "max_file_size": 1048576,
    "include_attachments": true,
    "template_file": "templates/obsidian/email.md",
    "repopack_template_file": "templates/obsidian/repopack.md"
  },
  "attachments": {
    "download_path": "~/Downloads/gmail-attachments",
    "auto_open": true,
    "max_download_size": 52428800
  },
  "performance": {
    "_comment": "Performance optimization settings - background preloading improves navigation speed",
    "preloading": {
      "_comment": "Background message preloading for instant navigation (Phase 2.4 performance optimization)",
      "enabled": true,
      "next_page": {
        "_comment": "Preload next page when scrolling reaches threshold",
        "enabled": true,
        "threshold": 0.7,
        "max_pages": 2
      },
      "adjacent_messages": {
        "_comment": "Preload messages around current selection for smooth navigation",
        "enabled": true,
        "count": 3
      },
      "limits": {
        "_comment": "Resource limits to prevent excessive memory/API usage",
        "background_workers": 3,
        "cache_size_mb": 50,
        "api_quota_reserve_percent": 20
      }
    }
  }
}
