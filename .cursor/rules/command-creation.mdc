const (
    nsKey      = "ns"       // Namespace: -n default
    filterKey  = "filter"   // Filtro: /pattern
    fuzzyKey   = "fuzzy"    // Fuzzy: -f pattern
    labelKey   = "labels"   // Labels: key=value
